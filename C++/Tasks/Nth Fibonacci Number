#include<iostream>
using namespace std;

//Fibonacci Series using Recursion

 
int fib(int n)
{
   int l = 0;
   int m = 1;
   int k;
    if( n == 0)
        return 0;
    for(int i = 2; i <= n; i++)
    {
       k = l + m;
       l = m;
       m = k;
    }
    return m;
}
 
int main ()
{
    int n = 10;
    cout << fib(n);
    getchar();
    return 0;
}
